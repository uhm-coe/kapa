@import "bootstrap-sprockets";
@import "bootswatch/<%=Rails.configuration.theme %>/variables";
@import "bootstrap";
@import "bootswatch/<%=Rails.configuration.theme %>/bootswatch";

.section-header {
  padding-bottom: 9px;
  border-bottom: 1px solid #EEEEEE;
  margin-bottom: 30px;
}

.section-header.divider {
  margin-top: 30px;
}

.section-header a.glyphicon {
  color: #7C7C7C;
  text-decoration: none;
  margin-right: 12px;
}

.section-header a.glyphicon:hover {
  color: #333333;
}

.right {
  text-align: right;
}

.tabs {
  margin-top: -20px;
}

.tab-content {
  margin-top: 24px;
}

.kapa-datepicker.form-control[readonly] {
  cursor: default;
  background-color: #FFFFFF;
  opacity: 1;
}

/* Fix so that multiselect spans the width of the parent container */
.kapa-multiselect-btn-group, .kapa-multiselect-btn {
  width: 100%;
}

/* Aligns multiselect button text to the left */
button.kapa-multiselect-btn {
  text-align: left;
}

/* Fix so that multiselect dropdown is not covered by tab boundaries (see admin/programs/show) */
/* Note: Setting a positive z-index so the dropdown appears above the other tabs does not work */
ul.multiselect-container.dropdown-menu {
  position: relative;
}

.form-block {
  margin-top: 24px;
}

/* Places form acknowledgement text inline with the checkbox */
.form-agreement > div:first-of-type > label {
  display: inline;
}

.form-notice {
  font-style: italic;
}

/* Fix for report/reports/show filter due to interference of pivot styles */
#filter_report_dialog .modal-dialog {
  padding: 0;
  position: relative;
  border: none;
  background: none;
  -webkit-box-shadow: none;
  box-shadow: none;
  background-clip: border-box;
  outline: none;
}

label.required:after {
  color: red;
  content: " *";
}
