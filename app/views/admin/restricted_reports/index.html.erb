<% content_for(:head) do %>
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      <% if @modal %>$('#filter_dialog').modal({show : true});<% end %>
    });
  </script>
<% end %>

<% content_for(:dialog) do %>

  <%=render :layout => '/layouts/modal', :locals => {:modal_id => "filter_dialog", :modal_title => "Filter Criteria", :modal_form_id => "filter_form"} do %>
    <%=bootstrap_form_for(:filter, :url => admin_restricted_reports_path, :html => {:method => :get, :id => "filter_form"}) do |f| %>
      <div class="row">
        <div class="col-xs-6">
          <%= f.term_select :term_start_id, :name => :term_id, :label => "Term Start" %>
          <%= f.term_select :term_end_id, :name => :term_id, :label => "Term End" %>
          <%= f.property_select :program, :include_blank => "Any", :depts => @current_user.depts %>
          <%= f.property_select :distribution, :name => :distribution, :include_blank => "Any" %>
        </div>
        <div class="col-xs-6">
          <%= f.property_select :type, :name => :transition_point %>
          <%= f.property_select :major_primary, :name => :major, :include_blank => "Any", :depts => @current_user.depts, :label => "Major/Concentration" %>
          <%= f.property_select :status, :name => :admission_status, :include_blank => "Any" %>
      </div>
    <% end %>
  <% end %>

  <!-- TODO: Implement the Download modal -->

<% end %>

<% content_for(:box1) do %>

  <h3>SSN Reporting</h3>

  <div class="row">
    <div class="text-right">
      <!-- TODO: Implement the Download button -->
      <button class="btn btn-default" data-toggle="modal" data-target="#filter_dialog">Filter</button>
    </div>
  </div>

  <table id="admission_list" class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>SSN</th>
        <th>Program</th>
        <th>Latest Action</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% for transition_point in @transition_points %>
        <tr>
          <td><%=transition_point.curriculum.person.id_number %></td>
          <td><%=link_to_if @current_user.manage?(:main, :delegate => :search), abbr(transition_point.curriculum.person.full_name), main_person_path(:id => transition_point.curriculum.person_id) %></td>
          <td><%=h transition_point.curriculum.person.ssn_agreement %>-<%=h transition_point.curriculum.person.ssn%> </td>
          <td><%=abbr transition_point.curriculum.code_desc, transition_point.curriculum.code %></td>
          <td><%=h transition_point.last_transition_action.action_desc if transition_point.last_transition_action %></td>
          <td><%=h transition_point.status_desc %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center"><%=will_paginate @transition_points, :renderer => BootstrapPagination::Rails %></div>

<%end%>
