<div class="row">
  <div class="col-sm-6">
    <%=f.text_field :uid, :label => "UID" %>
    <%=f.text_field :password %>
    <%=f.select :category, [["LDAP", "ldap"],["Local" , "local"]], :label => {:text => "Auth Method"} %>
    <%=f.select :emp_status, [["0/Non-Employee", 0],["1/Former Employee" , 1],["2/Active Employee" , 2],["3/Overridden" , 3]], :include_blank => true %>
    <%=f.select :status, [["0/No Access", 0],["1/AS User" , 1],["3/SIS User" , 3]], :label => {:text => "User Status"}  %>
  </div>
  <div class="col-sm-6">
    <%=f.property_select :depts, {:name => :dept, :label => "Data Access"}, {:multiple => true, :selected => @user.dept} %>
    <%=f.history_select :department, :include_blank => true %>
    <%=f.history_select :position, :include_blank => true %>
    <%=label_fields_for :acknowledgements do |a|%>
      <%=a.text_field :generalConfidentialityNotice, :label => {:text => "GCN date"}, :disabled => true %>
      <%=a.text_field :uhInformationSecurityAwarenessCertification, :label => {:text => "ISAC date"}, :disabled => true %>
    <% end %>
  </div>
</div>
<%=f.hidden_field :person_id %>
