<!DOCTYPE html>
<html>
  <head>
    <%=csrf_meta_tag %>
    <%=stylesheet_link_tag "/stylesheets/revival-jquery-ui/jquery-ui-1.8.custom.css" %>
    <%=stylesheet_link_tag "/stylesheets/jquery.multiselect.css" %>
    <%=stylesheet_link_tag "/stylesheets/jquery.multiselect.filter.css" %>
    <%=stylesheet_link_tag "/stylesheets/jquery.ui.potato.menu.css" %>
    <%=stylesheet_link_tag "/stylesheets/bluefreedom/style.css" %>
    <%=stylesheet_link_tag "/stylesheets/bluefreedom/style-print.css", :media => "print" %>
    <%=stylesheet_link_tag "/stylesheets/uni-form/uni-form.css", :media => "all" %>
    <%=stylesheet_link_tag "/stylesheets/uni-form/default.uni-form.css", :media => "all" %>
    <%=stylesheet_link_tag "/stylesheets/application.css" %>
    <%=javascript_include_tag "/javascripts/jquery-1.7.2.min.js"%>
    <%=javascript_include_tag "/javascripts/jquery-ui-1.8.2.custom.min.js"%>
    <%=javascript_include_tag "/javascripts/jquery.getUrlParam.js"%>
    <%=javascript_include_tag "/javascripts/jquery.maskedinput-1.3.min.js"%>
    <%=javascript_include_tag "/javascripts/jquery.multiselect.min.js"%>
    <%=javascript_include_tag "/javascripts/jquery.multiselect.filter.min.js"%>
    <%=javascript_include_tag "/javascripts/jquery.ui.potato.menu.js"%>
    <%=javascript_include_tag "/javascripts/rails.js"%>
    <%=javascript_include_tag "/javascripts/application.js" %>

    <%=yield :head %>

    <% if params[:controller] == "artifact/documents" %>
      <style TYPE="text/css">
        <!--
        html, body, div, iframe { margin:0; padding:0; height:100%; }
        iframe { display:block; width:100%; border:none; }
        -->
      </style>
    <% end %>

    <title><%=h "#{@person.full_name}/" if @person%><%=h @title %></title>
  </head>
  <body>
    <div id="wrap">

      <div id="content">
        <% if content_for?(:form) %>
          <div id="form_top"></div>
          <div id="form_middle">
            <div class="header"><h1><%=@title%></h1></div>
            <div id="full">
              <%=yield :form %>
            </div>
          </div>
          <div id="form_bottom"></div>
        <% end %>
        <% if content_for?(:document) %>
          <%=yield :document %>
        <% end %>
      </div>

      <% if content_for?(:navigation) %>
        <div id="navigation">
          <%=yield :navigation %>
          <%=content_tag :div, flash[:notice1], :id => "notice1", :class => "notice" %>
        </div>
      <% end %>

    </div>

    <div id="clear"></div>
    <div id="footer">
    </div>

  </body>
</html>
