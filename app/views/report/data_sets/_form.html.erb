<%= form_for @data_set, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :type, [["Internal","internal"], ["External","external"]], :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :data_source_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :data_source_id, @data_sources.collect {|d| [d.name, d.id]}, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :query, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :query, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            report_data_sets_path, :class => 'btn btn-default' %>
 
<% end %>
