<% content_for(:dialog) do %>

  <%= render :layout => '/kapa/layouts/modal', :locals => {:modal_id => "filter_dialog", :modal_title => "Search", :modal_form_id => "filter_form"} do %>
    <%= bootstrap_form_for(:filter, :url => kapa_faculty_awards_path, :html => {:method => :get, :id => "filter_form"}) do |f| %>
      <%= f.text_field :name, :label => "Award Name" %>
      <%= f.text_field :affiliation, :label => "Affiliation" %>
      <%= f.select :context, [["University", "university"], ["Professional", "professional"], ["Community", "community"]], :label => "Context", :include_blank => "Any" %>
      <div class="form-group">
        <%= label_tag "filter_date_start", "Award Date Start" %>
        <%= date_picker :filter, :award_date_start %>
      </div>
      <div class="form-group">
        <%= label_tag "filter_date_end", "Award Date End" %>
        <%= date_picker :filter, :award_date_end %>
      </div>
      <%= f.select :per_page, [10, 20, 30, 40, 50] %>
    <% end %>
  <% end %>

<% end %>

<% content_for(:box1) do %>

  <h3>Awards</h3>

  <div class="row">
    <div class="col-sm-12 text-right">
      <%=bootstrap_button "Download", {:action => :export}, :icon => "glyphicon-download" %>
      <%=bootstrap_button "Search", nil, "data-toggle" => "modal", "data-target" => "#filter_dialog", :icon => "glyphicon-search" %>
    </div>
  </div>

  <table id="advising_list" class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Award Name</th>
        <th>Affiliation</th>
        <th>Context</th>
        <th></th>
      </tr>
      <% for award in @awards %>
        <tr>
          <td><%= award.person.id_number %></td>
          <td><%= link_to abbr(award.person.full_name), kapa_person_path(:id => award.person_id) if award.person %></td>
          <td><%= abbr award.name, 25 %></td>
          <td><%= abbr award.affiliation, 25 %></td>
          <td><%= award.context %></td>
          <td class="right"><%=link_to "Show", kapa_faculty_award_path(:id => award), :class => "btn btn-default btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center"><%=will_paginate @awards, :renderer => BootstrapPagination::Rails %></div>

<% end %>
