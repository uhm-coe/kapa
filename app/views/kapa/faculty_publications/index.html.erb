<% content_for(:dialog) do %>

  <%= render :layout => '/kapa/layouts/modal', :locals => {:modal_id => "filter_dialog", :modal_title => "Search", :modal_form_id => "filter_form"} do %>
    <%= bootstrap_form_for(:filter, :url => kapa_faculty_publications_path, :html => {:method => :get, :id => "filter_form"}) do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :pubtitle, :label => "Title" %>
          <%= f.property_select :pubtype, :name => :publication_type, :label => "Type", :include_blank => "Any" %>
          <%= f.text_field :keyword, :label => "Keyword" %>
          <%= f.text_field :author, :label => "Author" %>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= label_tag "filter_date_start", "Publication Date Start" %>
            <%= date_picker :filter, :pubdate_start %>
          </div>
          <div class="form-group">
            <%= label_tag "filter_date_end", "Publication Date End" %>
            <%= date_picker :filter, :pubdate_end %>
          </div>
          <%= f.select :per_page, [10, 20, 30, 40, 50] %>
        </div>
      </div>
    <% end %>
  <% end %>

<% end %>

<% content_for(:box1) do %>

  <h3>Publications</h3>

  <div class="row">
    <div class="col-sm-12 text-right">
      <%=bootstrap_button "Download", {:action => :export}, :icon => "glyphicon-download" %>
      <%=bootstrap_button "Search", nil, "data-toggle" => "modal", "data-target" => "#filter_dialog", :icon => "glyphicon-search" %>
    </div>
  </div>

  <table id="advising_list" class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Type</th>
        <th>Title</th>
        <th>Date</th>
        <th>Authors</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for publication in @publications %>
        <tr>
          <td><%= publication.person.id_number %></td>
          <td><%= link_to abbr(publication.person.full_name), kapa_person_path(:id => publication.person_id) if publication.person %></td>
          <td><%= Kapa::Property.lookup_description(:publication_type, publication.pubtype) %>
          <td><%= abbr publication.pubtitle, 25 %></td>
          <td><%= publication.pubdate %></td>
          <td><%= publication.authors_ordered.map { |a| a.full_name }.join(", ") %></td>
          <td class="right"><%=link_to "Show", {:action => :show, :id => publication}, :class => "btn btn-default btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center"><%=will_paginate @publications, :renderer => BootstrapPagination::Rails %></div>

<% end %>
