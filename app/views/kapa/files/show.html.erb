<% content_for(:main) do %>

  <%=render :partial => "file_container", :locals => {:file => @file} %>

  <div class="text-center">
    <%=button_to_link "Download", kapa_file_path(:id => @file, :format => :file), :icon => "glyphicon-download" %>
  </div>

<% end %>

<% content_for(:sidebar) do %>

  <%=bootstrap_form_for(:file, :url => kapa_file_path(:id => @file), :html => {:method => :put, :id => "edit_file_form"}) do |f| %>

    <div class="row form-block">
        <%=f.text_area :note, :text => "Note", :size => "5x7" %>
        <%=f.text_field :name %>
        <%=f.property_select :dept, :name => :dept, :label => t(:kapa_global_dept) if @current_user.manage? :kapa_files %>
    </div>

    <div class="text-center">
      <button class="btn btn-primary" name="commit" type="submit"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Save</button>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="glyphicon glyphicon-option-vertical"></span> More <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to "Delete", kapa_file_path(:id => @file, :return_path => params[:return_path]), :method => :delete, "data-confirm" => "Proceed with deletion?" %></li>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>