<% content_for(:main) do %>

  <%=render :partial => "file_container", :locals => {:file => @file} %>

<% end %>

<% content_for(:sidebar) do %>

  <%=bootstrap_form_for(:file, :url => kapa_file_path(:id => @file), :html => {:method => :put, :id => "edit_file_form"}) do |f| %>

    <%=f.text_field :name, :label => "Title" %>
    <%=f.text_area :note, :text => "Note", :size => "5x7" %>
    <%= f.property_select(:depts, {:name => :dept, :label => t(:kapa_global_dept).pluralize}, :multiple => true) if manage? :kapa_files %>

    <% more_actions = [] %>
    <% more_actions << link_to("Download", kapa_file_path(:id => @file, :format => :file)) %>
    <% more_actions << link_to("Delete this file", kapa_file_path(:id => @file, :return_path => session[:return_path]), :method => :delete, "data-confirm" => "Are you sure you want to delete?") if destroy? %>
    <%=render(:layout => "/kapa/layouts/controls", :locals => {:hide_cancel => true, :more_actions => more_actions}) do %>
      <%=button_to_link "Cancel", nil, "data-close" => true %>
    <% end if update? %>

  <% end %>

<% end %>