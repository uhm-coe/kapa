<%= bootstrap_fields_for :person do |f| %>

  <div class="row">
    <div class="col-sm-6">
      <%= f.text_field :id_number, :size => 10, :readonly => @person.verified?, :class => "id_number", :label => "Campus ID" %>
      <%= f.text_field :last_name, :size => 30 %>
      <%= f.text_field :middle_initial, :size => 30 %>
      <div class="form-group">
        <%= label_tag "person_birth_date", "Birth Date" %>
        <%= date_picker :person, :birth_date %>
      </div>
      <%= f.text_field :ssn, :size => 10, :class => "ssn", :label => "SSN" %>
      <%= f.check_box :ssn_agreement, {:label => "SSN Agreement"}, "Y", "N" %>
    </div>

    <div class="col-sm-6">
      <%= f.text_field :email, :size => 30, :readonly => @person.verified?, :label => "Campus E-Mail" %>
      <%= f.text_field :first_name, :size => 30 %>
      <%= f.text_field :other_name %>
      <%= f.select :title, [["Mr.", "MR"], ["Ms.", "MS"], ["Dr.", "DR"]], :include_blank => true %>
      <%= f.select :gender, [["Male", "M"], ["Female", "F"]], :include_blank => true %>
    </div>

    <%=f.hidden_field :status %>
    <%=hidden_field_tag :person_id_verified %>
  </div>

<% end %>