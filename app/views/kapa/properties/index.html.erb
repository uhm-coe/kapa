<% content_for(:dialog) do %>

  <%= render :layout => '/kapa/layouts/modal', :locals => {:modal_id => "filter_dialog", :modal_title => "Search", :modal_form_id => "filter_form"} do %>
    <%= bootstrap_form_for(:filter, :url => kapa_properties_path, :html => {:method => :get, :id => "filter_form"}) do |f| %>
      <%= f.history_select :name, :model_class => Kapa::Property, :model_method => :name %>
      <%= f.select :active, [["Active", "1"], ["In-Active", "0"]], :include_blank => "Any" %>
      <%= f.select :per_page, [10, 20, 30, 40, 50] %>
    <% end %>
  <% end %>

<% end %>

<% content_for(:box1) do %>

  <h3>Properties</h3>

  <div class="row">
    <div class="col-sm-12 text-right">
      <%= bootstrap_button "New", {:action => :new}, :icon => "glyphicon-plus" %>
      <%=bootstrap_button "Search", nil, "data-toggle" => "modal", "data-target" => "#filter_dialog", :icon => "glyphicon-search" %>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Key</th>
      <th>Value</th>
      <th>Category</th>
      <th>Dept</th>
      <th>Sequence</th>
      <th>Active</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% for property in @properties %>
      <tr>
        <td><%= h property.code %></td>
        <td><%= h property.description %></td>
        <td><%= abbr property.category, 20 %></td>
        <td><%= h property.dept.join(", ") %></td>
        <td><%= h property.sequence %></td>
        <td><%= h property.active %></td>
        <td class="right"><%= link_to "Show", {:action => :show, :id => property}, :class => "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="text-center"><%= will_paginate @properties, :renderer => BootstrapPagination::Rails %></div>

<% end %>
