<% content_for(:head) do %>
  <script type="text/javascript">
    jQuery(document).ready(function ($) {
      <% if @modal %>$('#filter_dialog').modal({show: true});
      <% end %>
    });
  </script>
<% end %>

<% content_for(:dialog) do %>

  <%= render :layout => '/kapa/layouts/modal', :locals => {:modal_id => "filter_dialog", :modal_title => "Search", :modal_form_id => "filter_form"} do %>
    <%= bootstrap_form_for(:filter, :url => kapa_curriculums_path, :html => {:method => :get, :id => "filter_form"}) do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.term_select :term_id, :include_blank => "Any", :label => "Term" %>
          <%= f.program_select :program_id, :include_blank => "Any", :depts => @current_user.depts, :value => :id %>
          <%= f.property_select :type, :name => :transition_point, :conditions => "category = 'entrance'" %>
          <%= f.property_select :major_primary, :name => :major, :include_blank => "Any", :depts => @current_user.depts %>
          <%= f.history_select :cohort, :model_class => Kapa::Curriculum, :model_mathod => :cohort, :include_blank => "Any" %>
        </div>
        <div class="col-sm-6">
          <%= f.property_select :status, :name => :admission_status, :include_blank => "Any" %>
          <%= f.property_select :distribution, :name => :distribution, :include_blank => "Any" %>
          <%= f.user_select :user_id, :include_blank => "Any", :depts => @current_user.depts %>
          <%= f.select :per_page, [10, 20, 30, 40, 50] %>
        </div>
      </div>
    <% end %>
  <% end %>

<% end %>

<% content_for(:box1) do %>

  <h3>Cohort (<%= @filter.term_id.present? ? Kapa::Term.find(@filter.term_id).description : "Any Terms" %>)</h3>

  <div class="row">
    <div class="col-sm-12 text-right">
      <%=bootstrap_button "Download", {:action => :export}, :icon => "glyphicon-download" %>
      <%=bootstrap_button "Search", nil, "data-toggle" => "modal", "data-target" => "#filter_dialog", :icon => "glyphicon-search" %>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Program</th>
      <th>Last Transition Point</th>
      <th>Last Action</th>
      <th>Assignee</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% for curriculum in @curriculums %>
      <tr>
        <td><%= curriculum.person.id_number %></td>
        <td><%= link_to_if @current_user.read?(:kapa_persons), abbr(curriculum.person.full_name), kapa_person_path(:id => curriculum.person_id) %></td>
        <td><%= abbr curriculum.code_desc, curriculum.code %></td>
        <td><%= h curriculum.rsend(:last_transition_point, :type_desc) %></td>
        <td><%= h curriculum.rsend(:last_transition_point, :last_transition_action, :action_desc) %></td>
        <td><%= h curriculum.rsend(:user_primary, :person, :last_name) %></td>
        <td class="right"><%= link_to "Show", {:action => :show, :id => curriculum}, :class => "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="text-center"><%= will_paginate @curriculums, :renderer => BootstrapPagination::Rails %></div>

<% end %>
