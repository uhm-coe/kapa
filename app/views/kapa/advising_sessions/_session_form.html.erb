<%= bootstrap_fields_for :advising_session do |f| %>

  <div class="row">
  <div class="col-sm-6">
    <%=f.date_picker :session_date, :label => "Date" %>
    <%=f.property_select :session_type, :name => :advising_type, :label => "Type" %></p>
    <%=f.property_select :task, :name => :advising_task %></p>
    <%=f.select :curriculum_id, @curriculums.collect {|c| ["#{c.code_desc}", c.id]}, :label => "Program", :include_blank => "Prospective" %>
    <%=f.property_select :interest, {:name => :advising_interest, :include_blank => true} %></p>
    <%=f.property_select :classification, {:name => :advising_classification} %></p>
    <%=f.property_select :location, {:include_blank => true} %></p>
    <%=f.user_select :user_ids, {:label => "Assignee", :depts => @current_user.depts}, {:multiple => true} %>
  </div>

  <div class="col-sm-6">
    <%=f.text_area :note, {:cols => 54, :rows => 20} %>
    <%=f.hidden_field :person_id  %>
  </div>
</div>

<% end %>