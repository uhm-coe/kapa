<% content_for(:form) do %>

  <div style="text-align: right;"><h3>ID: <%= h @exam.report_number %></h3></div>

  <%= bootstrap_form_for(:exam) do %>
    <%= render :partial => "/kapa/document/exam_detail" %>
  <% end %>

<% end %>

<% content_for(:navigation) do %>

  <%= bootstrap_form_for(:exam, :url => kapa_document_exam_path(:id => @exam), :html => {:method => :put}) do |f| %>
    <%= f.text_area :note, :text => "Note", :size => "25x30" %>
    <%= render :partial => "/kapa/layouts/controls" if @current_user.write? :kapa_document_exams, :dept => @exam.dept %>
  <% end %>

<% end %>