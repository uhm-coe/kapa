<% content_for(:head) do %>
  <script type="text/javascript">
    jQuery(document).ready(function ($) {
      <% if @modal %>$('#filter_dialog').modal({show: true});
      <% end %>
    });
  </script>
<% end %>

<% content_for(:dialog) do %>

  <%= render :layout => '/kapa/layouts/modal', :locals => {:modal_id => "filter_dialog", :modal_title => "Filter Criteria", :modal_form_id => "filter_form"} do %>
    <%= bootstrap_form_for(:filter, :url => kapa_document_forms_path, :html => {:method => :get, :id => "filter_form"}) do |f| %>
      <%= f.term_select :term_id, :include_blank => "Any" %>
      <%= f.property_select :type, :name => :form, :include_blank => "Any", :label => "Form Title" %>
      <%= f.select :lock, [["Locked", "Y"], ["Unlocked", "N"]], :include_blank => "Any", :label => "Lock" %>
      <%= f.select :per_page, [10, 20, 30, 40, 50] %>
    <% end %>
  <% end %>

<% end %>

<% content_for(:box1) do %>

  <h3>Files</h3>

  <div class="row">
    <div class="col-sm-12 text-right">
      <%= link_to "Download", {:action => :export}, :class => "btn btn-default" %>
      <button type="button" class="btn btn-default" data-toggle="modal" data-target="#filter_dialog">Search</button>
    </div>
  </div>

  <table id="form_list" class="table table-striped">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Form ID</th>
      <th>Updated</th>
      <th>Dept</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% for file in @files %>
      <tr>
        <td><%= file.person.id_number if file.person %></td>
        <td><%= link_to abbr(file.person.full_name), kapa_main_person_path(:id => file.person_id) if file.person %></td>
        <td><%= h file.id %></td>
        <td><%= format_date file.updated_at %></td>
        <td><%= h file.dept %></td>
        <td class="right"><%= link_to "Show", {:action => :show, :id => file}, {:target => "_blank", :class => "btn btn-default btn-xs"} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="text-center"><%= will_paginate @files, :renderer => BootstrapPagination::Rails %></div>

<% end %>
