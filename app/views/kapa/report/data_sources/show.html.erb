<% content_for(:box1) do %>
  <%- model_class = DataSource -%>

  <h4 class="section-header">
    <%=link_to "", {:action => :index}, :class => "glyphicon glyphicon-chevron-left" %>
    <%=t '.title', :default => model_class.model_name.human.titleize %>
  </h4>

  <div class="right">
    <%= link_to "Edit", edit_kapa_report_data_source_path(@data_source), :class => 'btn btn-default' %>
    <%=link_to content_tag(:i, "", :class => "glyphicon glyphicon-trash") + " Delete", kapa_report_data_source_path(@data_source), {:method => :delete, "data-confirm" => "Are you sure you want to delete this?", :class => "btn btn-default"} %>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
        <dd><%= @data_source.type %></dd>
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @data_source.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
        <dd><%= @data_source.url %></dd>
        <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
        <dd><%= @data_source.user %></dd>
      </dl>
    </div>
  </div>
<% end %>
