<% content_for(:box1) do %>

  <h4 class="section-header">
    <%=link_to "", {:action => :index}, :class => "glyphicon glyphicon-chevron-left" %>
    New System Property
  </h4>

  <div class="tabs">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#property_tab" data-toggle="tab">Properties</a></li>
    </ul>

    <div class="tab-content">
      <div id="property_tab" class="tab-pane active">
        <%=bootstrap_form_for :property, :url => kapa_admin_properties_path do |f| %>
          <%=render :partial => "/kapa/admin/property_form", :locals => {:f => f} %>
          <%=render :partial => "/kapa/layouts/controls" %>
        <% end %>
      </div>
    </div>
  </div>

<% end %>