<% content_for(:box1) do %>

  <h4 class="section-header">
    <%=link_to "", {:action => :index}, :class => "glyphicon glyphicon-chevron-left" %>
    New Assessment
  </h4>

  <div class="tabs">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#rubric_profile_tab" data-toggle="tab">Profile</a></li>
    </ul>

    <div class="tab-content">
      <div id="rubric_profile_tab" class="tab-pane active">
        <%=label_form_for :assessment_rubric, :url => admin_rubrics_path, :remote => true do |f| %>
          <%=render :partial => "/admin/rubric_form", :locals => {:f => f} %>
          <%=controls if @current_user.manage? :admin, :delegate => :rubric %>
        <% end %>
      </div>
    </div>

  </div>

<% end %>