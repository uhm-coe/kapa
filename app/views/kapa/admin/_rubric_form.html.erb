<%=bootstrap_fields_for :assessment_rubric do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <%=f.text_field :title %>
      <%=f.text_field :dept %>
      <%=f.text_field :reference_url %>
      <%=f.term_select :start_term_id, :include_blank => true, :label => "Effective From" %>
      <%=f.term_select :end_term_id, :include_blank => true, :label => "Effective To" %>
    </div>

    <div class="col-sm-6">
      <%=f.program_select :programs, {:selected => @assessment_rubric.program}, {:multiple => true, :size => "10", :class => "multi-select", :selectedlist => 1} %>
      <%=f.property_select :courses, {:name => :assessment_course, :selected => @assessment_rubric.course}, {:multiple => true, :size => "10", :class => "multi-select"} %>
      <%=f.property_select :transition_points, {:name => :transition_point, :selected => @assessment_rubric.transition_point}, {:multiple => true, :size => "10", :class => "multi-select"} %>
    </div>
  </div>
<% end %>
