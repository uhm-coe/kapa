<% content_for(:box1) do %>

  <h4 class="section-header">
    <%=link_to "", {:action => :index}, :class => "glyphicon glyphicon-chevron-left" %>
    New Program
  </h4>

  <div class="tabs">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#program_profile_tab" data-toggle="tab">Profile</a></li>
    </ul>

    <div class="tab-content">
      <div id="program_profile_tab" class="tab-pane active">
        <%=label_form_for :program, :url => kapa_admin_programs_path, :remote => true do |f| %>
          <%=render :partial => "/kapa/admin/program_form" %>
          <%=controls if @current_user.manage? %>
        <% end %>
      </div>
    </div>
  </div>

<% end %>