<div class="row">
  <div class="col-sm-6">
    <%=f.text_field :uid, :label => "UID" %>
    <%=f.text_field :password %>
    <%=f.select :category, [["LDAP", "ldap"],["Local" , "local"]], :label => {:text => "Auth Method"} %>
    <%=f.select :emp_status, [["Non-Employee", 0],["Former Employee" , 1],["Active Employee" , 2],["Overridden" , 3]] %>
  </div>
  <div class="col-sm-6">
    <%=f.select :status, [["No Access", 0],["Guest" , 1],["User" , 3]], :label => "User Status" %>
    <%=f.property_select :dept, {:name => :dept, :label => "Data Access"}, {:multiple => true} %>
    <%=f.property_select :department, :name => :dept, :include_blank => true %>
    <%=f.text_field :position %>
  </div>
</div>
<%=f.hidden_field :person_id %>
