<% content_for(:box1) do %>

  <h3>Reports</h3>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Datasource</th>
      <th>Loaded at</th>
      <th>Record Count</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @datasets.each do |dataset| %>
      <tr>
        <td><%=dataset.id %></td>
        <td><%=dataset.name %></td>
        <td><%=dataset.datasource %></td>
        <td><%=dataset.loaded_at %></td>
        <td><%=dataset.record_count %></td>
        <td class="right"><%=button_to_link "", {:action => :show, :id => dataset}, :icon => "glyphicon-chevron-right", :class => "btn-default btn-xs pull-right" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>
