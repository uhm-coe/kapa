<table id="assessment_table" class="table table-hover">
  <tr>
    <th>Label</th>
    <th>Criterion</th>
    <th>Evaluation</th>
  </tr>
  <% for assessment_criterion in @assessment_rubric.assessment_criterions %>
  <tr>
    <td><%=h assessment_criterion.criterion %></td>
    <td><%=abbr assessment_criterion.criterion_desc, 30 %></td>
    <% index = "#{@transition_point.id}_#{assessment_criterion.id}" %>
    <td><%=score_select(:assessment_scores, index, :value => @scores[index], :next_id => next_id(:assessment_scores, index), :type => assessment_criterion.type, :type_option => assessment_criterion.type_option) %></td>
  </tr>
  <% end %>
</table>

<%=bootstrap_fields_for :transition_point do |t| %>
  <div class="row">
    <div class="col-xs-12">
       <%=t.text_area :assessment_note, :style => "width:100%", :rows => 3 %>
    </div>
  </div>
<% end %>
