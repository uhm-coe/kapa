<% case_action = @case_action.new_record? ? "case_action" : "case_action[]" %>
<%= bootstrap_fields_for case_action do |a| %>
  <div class="row">
    <div class="col-sm-3">
      <%= a.date_picker :action_date, :label => "Action Date" %>
    </div>
    <div class="col-sm-3">
      <%= a.property_select "action", :name => "#{@case_action.case.type}_action", :include_blank => true %>
    </div>
    <div class="col-sm-3">
      <%= a.text_field "action_specify" %>
    </div>
    <div class="col-sm-3">
      <%= a.user_select "user_id", :include_blank => true, :label => "Action by", :locked => !@current_user.manage? %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= a.text_area "note", :style => "width:100%; height:100px" %>
    </div>
  </div>
<% end %>
