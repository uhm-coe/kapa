<% content_for(:box1) do %>
  <h4 class="section-header">
    <%=link_to "", {:action => :index}, :class => "glyphicon glyphicon-chevron-left" %>
    <%=h @term.description %>
  </h4>

  <div>
    <%=bootstrap_form_for :term, :url => kapa_term_path(:id => @term), :html => {:method => :put} do %>
      <%=render :partial => "term_form" %>
