<%=bootstrap_fields_for :practicum_placement do |f| %>
  <table>
    <tr>
      <td>
        <%=f.text_field :term_id, :label => "Term" %>
        <%=f.text_field :curriculum_id, :label => "Program" %>
        <%=f.select :practicum_site_id, @practicum_sites.collect {|c| [c.name_short, c.id]}, {:include_blank => true}, :class => "single-select", :label => "Placement Site" if @practicum_placement.person %>
        <div>
          <%=label :practicum_placement, :name, "Mentor Teacher" %><br>
          <%=text_field :practicum_placement, :name, :readonly => true, :value => @practicum_placement.person ? @practicum_placement.person.full_name : "" %>
          <%=link_to_function(image_tag("/images/icons/edit.png"), nil, :class => "edit-mentor")%>
        </div>
        <%=f.user_select :user_primary_id, {:include_blank => true, :include => :employee, :label => "Supervisor Primary"} %>
        <%=f.user_select :user_secondary_id, {:include_blank => true, :include => :employee, :label => "Supervisor Secondary"} %>
        <%=f.text_area :note %>
      </td>
    </tr>
  </table>
  <%=f.hidden_field :person_id %>
<% end %>
