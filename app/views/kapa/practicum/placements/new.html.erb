<% content_for(:box1) do %>
  <%=render :partial => "/kapa/main/person_detail" %>

  <h4>New Placement</h4>
  <div class="tabs">
    <ul>
      <li><a href="#practicum_profile_tab">Profile</a></li>
    </ul>

    <div id="practicum_profile_tab">
      <%=bootstrap_form_for :practicum_placement, :url => kapa_practicum_placements_path(:id => @person) do |f| %>
        <table>
          <tr>
            <td>
              <%=f.term_select :term_id, :label => "Term" %>
            </td>
            <td>
              <%=f.select :curriculum_id, @curriculums.collect {|c| ["#{c.code}", c.id]}, :include_blank => "N/A", :label => {:text => "Program"} %>
            </td>
          </tr>
        </table>
        <%=render :partial => "/kapa/layouts/controls" if @current_user.write? %>
      <% end %>
    </div>
  </div>

  <%=link_to "Back", kapa_main_persons_path(:action => :show, :id => @person, :focus => :practicum) %>

<% end %>

