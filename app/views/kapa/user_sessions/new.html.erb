<% content_for(:head) do %>
  <style>
    .jumbotron {
      background-color: #eeeeee;
      color: inherit;
      margin-bottom: 0px;
      padding: 30px;
    }

    .right-col {
      padding: 120px 0 0 0;
      float: none;
      display: inline-block;
    }
  </style>
<% end %>

<% content_for(:box1) do %>
  <div class="row">
    <div class="col-md-8">
      <div class="jumbotron">
        <%=t :kapa_welcome_html%>
      </div>
    </div>

    <div class="col-md-4 right-col">
      <%= bootstrap_form_for(:user_session, :url => kapa_user_session_path, :html => {:method => :post}) do |f| %>
        <%= f.text_field :uid, :label => "Username" %>
        <%= f.password_field :password %>
        <%= f.submit "Login", :class => "btn btn-primary btn-lg" %>
      <% end %>
    </div>
  </div>
<% end %>
