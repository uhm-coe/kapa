<% content_for(:box1) do %>
  <%= render :partial => "/kapa/persons/person_detail" %>

  <h4 class="section-header divider">
     <%= link_to "", params[:return_path], :class => "glyphicon glyphicon-chevron-left" %>
  </h4>

  <div class="tabs">
    <ul class="nav nav-tabs">
      <li><a href="#person_tab" data-toggle="tab">Profile</a></li>
    </ul>

    <div class="tab-content">
      <div id="person_tab" class="tab-pane">
        <%= bootstrap_form_for(:person_assignment, :url => kapa_person_assignment_path(:id => @person_assignment, :return_path => params[:return_path]), :html => {:method => :put}) do %>
          <%= render :partial => "person_assignment_form" %>
          <%= render :partial => '/kapa/layouts/controls', :locals => {:delete_path => kapa_person_assignment_path(:id => @person_assignment)} if @current_user.write? %>
        <% end %>
      </div>
    </div>
  </div>

<% end %>
