<% content_for(:box1) do %>
  <%unless @advising_session.anonymous?%>
    <%=render :partial => "/kapa/main/person_detail" %>
  <%end%>

  <h4 class="section-header <%='divider' unless @advising_session.anonymous? %>">
    <%=link_to "", kapa_main_person_path(:id => @person, :focus => :advising), :class => "glyphicon glyphicon-chevron-left" %>
    Advising Record
  </h4>

  <div>
    <%=bootstrap_form_for :advising_session, :url => kapa_advising_sessions_path, :remote => true do |f| %>
      <%=render :partial => "/kapa/advising/session_form", :locals => {:f => f} %>
      <%=render :partial => "/kapa/layouts/controls" if @current_user.write? %>
    <% end %>
  </div>
<%end%>
