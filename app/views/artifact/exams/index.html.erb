<% content_for(:head) do %>
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      <% if @modal %>$('#filter_dialog').modal({show : true});<% end %>
    });
  </script>
<% end %>

<% content_for(:dialog) do %>

  <%=render :layout => '/layouts/modal', :locals => {:modal_id => "filter_dialog", :modal_title => "Filter Criteria", :modal_form_id => "filter_form"} do %>
    <%=bootstrap_form_for(:filter, :url => artifact_exams_path, :html => {:method => :get, :id => "filter_form"}) do |f| %>
      <%= f.text_field :name, :label => "Name" %>
      <!-- TODO: Create datepickers for Birth Date, Report Date Start, Report Date End -->
    <% end %>
  <% end %>

  <%=render :layout => '/layouts/modal', :locals => {:modal_id => "import_dialog", :modal_title => "Import Praxis Data", :modal_form_id => "import_exam_form"} do %>
    <%=bootstrap_form_for(:data, :url => import_artifact_exams_path, :html => {:multipart => true, :id => "import_exam_form"}) do |f|%>
      <%=f.file_field :import_file %></p>
      <%=f.hidden_field :type, :value => "Praxis" %></p>
    <% end %>
  <% end %>

<% end %>

<% content_for(:box1) do %>

  <h3>Praxis Score Reports</h3>

  <div class="row">
    <div class="text-right">
      <% if @current_user.manage? :artifact, :delegate => :import %>
        <button class="btn btn-default" data-toggle="modal" data-target="#import_dialog">Import</button>
      <% end %>
      <button class="btn btn-default" data-toggle="modal" data-target="#filter_dialog">Filter</button>
    </div>
  </div>

  <table id="report_list" class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Report Date</th>
        <th>Records</th>
        <th>Dept</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for exam in @exams %>
        <tr>
          <td><%=exam.person.id_number %></td>
          <td><%=link_to abbr(exam.person.full_name), main_person_path(:id => exam.person) %></td>
          <td><%=format_date exam.person.birth_date %></td>
          <td><%=format_date exam.report_date %></td>
          <td><%=h exam.exam_scores.length %></td>
          <td><%=h exam.dept %></td>
          <td class="right"><%=link_to "Show", {:action => :show, :id => exam}, {:target => :blank, :class => "btn btn-default btn-xs"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center"><%=will_paginate @exams, :renderer => BootstrapPagination::Rails %></div>

<% end %>
