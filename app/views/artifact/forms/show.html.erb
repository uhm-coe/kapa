<% content_for(:box1) do %>

  <div style="text-align: right;"><h3><%=h @form.academic_period_desc %></h3></div>
  <%=bootstrap_form_for :form, :url => artifact_form_path(:id => @form), :remote => true, :html => {:method => :put} do %>
    <%=render :partial => "/artifact/#{@form.type}_form" %>
    <%=hidden_field :form, :person_id%>
    <%=hidden_field :form, :type%>
  <% end %>

<% end %>

<% content_for(:box2) do %>

  <%=bootstrap_form_for(:form, :url => artifact_form_path(:id => @form), :remote => true, :html => {:method => :put}) do |f| %>
    <%=f.text_area :note, :text => "Note", :size => "25x30"%>
    <div class="row form-block">
      <div class="col-sm-4">
        <%=f.select :lock, [["Lock", "Y"], ["Unlock", "N"]], :text => "Lock status" %>
      </div>
    </div>
    <%=controls if @current_user.write? :artifact, :dept => @form.dept %>
  <% end %>

<% end %>
