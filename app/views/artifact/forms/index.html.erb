<% content_for(:head) do %>
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      <% if @modal %>$('#filter_dialog').modal({show : true});<% end %>
    });
  </script>
<% end %>

<% content_for(:dialog) do %>

  <%=render :layout => '/layouts/modal', :locals => {:modal_id => "filter_dialog", :modal_title => "Filter Criteria", :modal_form_id => "filter_form"} do %>
    <%=bootstrap_form_for(:filter, :url => artifact_forms_path, :html => {:method => :get, :id => "filter_form"}) do |f| %>
      <%= f.property_select :academic_period, :label => "Semester" %>
      <%= f.property_select :type, :name => :form, :label => "Form Title" %>
      <%= f.select :lock, [["Locked", "Y"], ["Unlocked", "N"]], :include_blank => true, :label => "Lock" %>
    <% end %>
  <% end %>

<% end %>

<% content_for(:box1) do %>

  <h3>Forms/<%=ApplicationProperty.lookup_description(:form, @filter.type)%> (<%=ApplicationProperty.lookup_description(:academic_period, @filter.academic_period)%>)</h3>

  <div class="row">
    <div class="text-right">
      <%=link_to "Download", {:action => :export}, :class => "btn btn-default" if @current_user.manage? :artifact, :delegate => :export %>
      <button class="btn btn-default" data-toggle="modal" data-target="#filter_dialog">Filter</button>
    </div>
  </div>

  <table id="form_list" class="table table-striped">
    <thead>
      <tr>
        <th>UH ID</th>
        <th>Name</th>
        <th>Form ID</th>
        <th>Last Update</th>
        <th>Submitted</th>
        <th>Lock</th>
        <th>Dept</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for form in @forms %>
        <tr>
          <td><%=link_to_id_number form.person if form.person %></td>
          <td><%=link_to abbr(form.person.full_name), main_persons_path(:action => :show, :id => form.person_id) if form.person %></td>
          <td><%=h form.id %></td>
          <td><%=time_ago_in_words form.updated_at if form.updated_at %> ago</td>
          <td><%=format_date form.submitted_at %></td>
          <td><%=h form.lock %></td>
          <td><%=h form.dept %></td>
          <td class="right"><%=link_to "Show", {:action => :show, :id => form}, {:target => "_blank", :class => "btn btn-default btn-xs"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center"><%=will_paginate @forms, :renderer => BootstrapPagination::Rails %></div>

<%end%>
