<% content_for(:box2) do %>
  <table id="form_list">
    <tr>
      <th>UH ID</th>
      <th>Name</th>
      <th>Form ID</th>
      <th>Last Update</th>
      <th>Submitted</th>
      <th>Lock</th>
      <th>Dept</th>
    </tr>
  
    <% for form in @forms %>
      <tr>
        <td><%=link_to_id_number form.person if form.person %></td>
        <td><%=link_to abbr(form.person.full_name), main_persons_path(:action => :show, :id => form.person_id) if form.person %></td>
        <td><%=h form.id %></td>
        <td><%=time_ago_in_words form.updated_at if form.updated_at %> ago</td>
        <td><%=format_date form.submitted_at %></td>
        <td><%=h form.lock %></td>
        <td><%=h form.dept %></td>
        <td><%=link_to "Show", {:action => :show, :id => form}, {:target => "_blank"} %></td>
      </tr>
    <% end %>
  </table>
  <div class="center"><%=will_paginate @forms %></div>
  <p class="right"><%=link_to "Download", :action => :export if @current_user.manage? :artifact, :delegate => :export %></p>

<%end%>


