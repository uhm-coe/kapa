<% content_for(:box1) do %>

  <h4>Forms</h4>
  <%=form_tag :action => :index do %>
    <table>
      <tr class="bottom">
        <td>
          <label>Semester:</label><br>
          <%=property_select :filter, :academic_period%>
        </td>
        <td>
          <label>Form Title:</label><br>
          <%=property_select :filter, :type, :name => :form %>
        </td>
        <td>
          <label>Lock:</label><br>
          <%=select :filter, :lock, [["Locked", "Y"], ["Unlocked", "N"]], :include_blank => true %>
        </td>
        <td>
          <p class="center"><%=submit_tag "Show" %></p>
        </td>
      </tr>
    </table>
  <% end %>

<%end%>
