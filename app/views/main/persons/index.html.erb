<% content_for(:head) do %>
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      $('#filter_key').mouseover(function() {
        if($(this).val() == 'Please enter key...') $(this).val('');
      });

      <% if @modal %>$('#filter_dialog').modal({show : true});<% end %>
    });
  </script>
<% end %>

<% content_for(:dialog) do %>

  <%=render :layout => '/layouts/modal', :locals => {:modal_id => "filter_dialog", :modal_title => "Search Criteria", :modal_form_id => "filter_form"} do %>
    <%=bootstrap_form_for(:filter, :url => main_persons_path, :html => {:method => :get, :id => "filter_form"}) do |f| %>
       <%=f.text_field :key %>
     <% end %>
  <% end %>

<% end %>

<% content_for(:box1) do %>

  <h3>Search Result for "<%=@filter.key%>"</h3>

  <div class="row">
    <div class="text-right">
      <%=link_to "New", {:action => :new}, :class => "btn btn-default" if @current_user.manage? :main, :delegate => :export %>
      <button type="button" class="btn btn-default" data-toggle="modal" data-target="#filter_dialog">Filter</button>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Other Names</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% for person in @persons %>
        <% if person.new_record? %>
          <tr class="new">
            <td><%=h person.id_number %></td>
            <td><%=h person.full_name %></td>
            <td></td>
            <td><%=mail_to person.email %></td>
            <td><%=link_to_unless person.id_number.blank?, "Add", :action => :create, :mode => :promote, "person[id_number]" => person.id_number %></td>
          </tr>
        <% else %>
          <tr>
            <td><%=person.id_number %></td>
            <td><%=h person.full_name %></td>
            <td><%=abbr person.other_name, 30 %></td>
            <td><%=mail_to person.email %></td>
            <td class="right"><%=link_to "Show", {:action => :show, :id => person}, :class => "btn btn-default btn-xs" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

<% end %>
